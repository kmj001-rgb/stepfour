{
  "manifest_version": 3,
  "name": "Gallery Image Scraper",
  "version": "1.0.0",
  "description": "Scrape images from photo agencies and galleries with authentication support",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gallery Scraper",
    "default_icon": {
      "16": "data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHJlY3Qgd2lkdGg9IjE2IiBoZWlnaHQ9IjE2IiBmaWxsPSIjNENBRjUwIi8+CjxwYXRoIGQ9Ik0zIDN2MTBoMTBWM0gzem0yIDJoNnY2SDV2LTZaIiBmaWxsPSJ3aGl0ZSIvPgo8L3N2Zz4K"
    }
  },
  "minimum_chrome_version": "88"
}