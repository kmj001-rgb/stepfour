{
  "manifest_version": 3,
  "name": "Gallery Scraper Pro",
  "version": "1.0.0",
  "description": "Professional Chrome extension for scraping image galleries and photo agencies with authentication support, pagination, and reliable downloading.",
  "action": {
    "default_title": "Gallery Scraper Pro - Click to open dashboard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "windows",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected_script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}